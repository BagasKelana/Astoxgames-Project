{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*", "./dist/*", ""],
            "pages/*": ["src/pages/*"],
            "components/*": ["src/components/*"],
            "types/*": ["src/@types/*"],
            "public/*": ["public/*"],
            "layout/*": ["layout/*"]
        }
    },
    "include": ["src"]
}
